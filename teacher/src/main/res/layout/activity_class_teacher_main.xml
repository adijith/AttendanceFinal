<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#373447"
    tools:context=".ClassTeacherMainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/profile_options"
        app:srcCompat="@drawable/professor"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/profile_options"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Profile options"
        android:layout_margin="12dp"
        app:layout_constraintBottom_toTopOf="@+id/student_options_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        tools:layout_editor_absoluteY="440dp" />

    <Button
        android:id="@+id/student_options_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Student options"
        android:layout_margin="12dp"
        app:layout_constraintBottom_toTopOf="@+id/attendance_marking_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        tools:layout_editor_absoluteY="487dp" />


    <Button
        android:id="@+id/attendance_marking_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Attendance Marking"
        android:layout_margin="12dp"
        app:layout_constraintBottom_toTopOf="@+id/attendance_options_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        tools:layout_editor_absoluteY="487dp" />

    <Button
        android:id="@+id/attendance_options_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="View Attendance options"
        android:layout_margin="12dp"
        app:layout_constraintBottom_toTopOf="@+id/logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        tools:layout_editor_absoluteY="487dp" />


    <Button
        android:id="@+id/logout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_margin="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        tools:layout_editor_absoluteY="534dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>